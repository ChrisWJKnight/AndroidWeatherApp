<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_style"
    android:elevation="1dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:background="#ffffff"
        android:id="@+id/month_img"
        android:contentDescription="@string/month_image"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/weather_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_temp"
        android:visibility="gone"
        android:layout_toRightOf="@id/month_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/weather_year"
        android:text="@string/text_temp"
        android:textSize="20sp"
        android:textColor="#2E2E2E"
        android:textStyle="bold"
        android:layout_toRightOf="@id/month_img"
        android:layout_marginStart="10dp"
        android:layout_below="@id/weather_id"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_tempMax"
        android:text="@string/text_temp"
        android:textColor="#FF5722"
        android:layout_toRightOf="@id/month_img"
        android:layout_marginStart="10dp"
        android:layout_below="@id/weather_year"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_tempMin"
        android:text="@string/text_temp"
        android:textColor="#00BCD4"
        android:layout_toEndOf="@id/month_img"
        android:layout_marginStart="10dp"
        android:layout_below="@id/weather_tempMax"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/weather_airFrost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/text_temp"
        android:textColor="#009688"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_rainFall"
        android:text="@string/text_temp"
        android:textColor="#2196F3"
        android:layout_alignParentRight="true"
        android:layout_below="@id/weather_airFrost"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_sunHours"
        android:text="@string/text_temp"
        android:textColor="#FFC107"
        android:layout_alignParentRight="true"
        android:layout_below="@id/weather_rainFall"
        android:layout_marginRight="10dp"/>


</RelativeLayout>